<?xml version="1.0" ?>
<launch>
    <arg name="PI" value="3.14159265"/>

    <arg name="PI_OVER_TWO"             value="$(eval 0.5 * arg('PI'))"/>
    <arg name="PI_OVER_FOUR"            value="$(eval 0.25 * arg('PI'))"/>
    <arg name="PI_THREE_QUARTERS"       value="$(eval 0.75 * arg('PI'))"/>
    <arg name="NEG_PI_THREE_QUARTERS"   value="$(eval -0.75 * arg('PI'))"/>
    <arg name="NEG_PI_OVER_FOUR"        value="$(eval -0.25 * arg('PI'))"/>
    <arg name="PI_AND_A_HALF"           value="$(eval 1.5 * arg('PI'))"/>
    <arg name="ZED2_ANGLE"              value="$(eval 0.175 * arg('PI'))"/>

    <!-- Thrusters -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_thruster0" args=" 0.24   -0.17988 -0.049   $(arg PI_OVER_FOUR)          0                    0 base_link thruster0" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_thruster1" args=" 0.0955 -0.206    0       0                            $(arg PI_AND_A_HALF) 0 base_link thruster1" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_thruster2" args="-0.0955 -0.206    0       0                            $(arg PI_AND_A_HALF) 0 base_link thruster2" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_thruster3" args="-0.24   -0.17988 -0.049   $(arg PI_THREE_QUARTERS)     0                    0 base_link thruster3" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_thruster4" args="-0.24    0.17988 -0.049   $(arg NEG_PI_THREE_QUARTERS) 0                    0 base_link thruster4" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_thruster5" args="-0.0955  0.206    0       0                            $(arg PI_AND_A_HALF) 0 base_link thruster5" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_thruster6" args=" 0.0955  0.206    0       0                            $(arg PI_AND_A_HALF) 0 base_link thruster6" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_thruster7" args=" 0.24    0.17988 -0.049   $(arg NEG_PI_OVER_FOUR)      0                    0 base_link thruster7" />

    <!-- Sonar -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="dvl_link_to_sonar" args="0.33075 0 -0.13046 0 0 $(arg PI) dvl_link sonar_link" />

    <!-- Underwater Downwards Facing Camera (UDFC) -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_udfc" args="-0.025 -0.09  -0.175  0 $(arg PI_OVER_TWO) 0 base_link udfc_link" />

    <!-- DVL -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_DVL" args="0 0 -0.1818 0 0 $(arg PI) base_link dvl_link" />

    <!-- ZED2 Camera -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_zed2_camera_center" args="0.3838 0.00067 0.02539 0 $(arg ZED2_ANGLE) 0 base_link zed2_camera_center" />

    <!-- IMU -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_imu" args="0.01422 0.00577 0.15597 $(arg PI) 0 0 base_link imu_0" />

    <!-- Subsea Power Puck (SPP) -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_SPP" args="-0.21 0 -0.2298 0 $(arg PI_OVER_TWO) 0 base_link SPP_link" />

    <!-- Grippers (Forward and Downward)-->
    <node pkg="tf2_ros" type="static_transform_publisher" name="sonar_link_to_gripper_forward"  args="0.17 -0.1 -0.07 0 0 0 sonar_link gripper_forward" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="sonar_link_to_gripper_downward" args="0.12 0.075 -0.12 0 $(arg PI_OVER_TWO) 0 sonar_link gripper_downward" />
</launch> 
